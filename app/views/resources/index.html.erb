
<h2>Learn to Code</h2>

<div class="row">
<% @resources.each do |resource| %>
  <div class="col s6 col s3">
    <div class="thumbnail">
    <%= link_to (image_tag resource.show_image, size:"160x100"), resource %><br>
    <em><%= resource.show_title %></em><br><br>
    <%= resource.title %>
    <%#= resource.show_description %><br>
  </div>
 </div>
<% end %>
</div>
