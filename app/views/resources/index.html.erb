<p id="notice"><%= notice %></p>
<%= image_tag @thumb_url.images.first.src.to_s, size:"160x100" %>
<%= @thumb_url.title %>
<%= @thumb_url.description %>
<% if @thumb_url.videos == !nil %>
<%= video_tag @thumb_url.video %>
<% end %>

<h1>Resources</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.title %></td>
        <td><%= resource.description %></td>
        <td><%= resource.rating %></td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_resource_path %>
