
<p id="notice"><%= notice %></p>

<h1>Learn to Code</h1>

<div class="row">
<% @resources.each do |resource| %>
  <div class="col s4">
    <%= link_to (image_tag resource.show_image, size:"160x100"), resource %><br>
    <em><%= resource.show_title %></em><br><br>
    <%#= resource.show_description %><br>
    <%= link_to 'Edit', edit_resource_path(resource) %>
    <%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'New Resource', new_resource_path %>
  <% end %>
 </div>
</div>
