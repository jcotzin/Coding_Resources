<div class="card-panel">
  <div class="row">
    <div class="col m4">
      <%= image_tag @resource.show_image, size:"160x100" %>
      <div class="star-rating" data-score= <%= @avg_review %> ></div><em><%= "#{@reviews.length} reviews" %></em>
      <div class="responsive-table">
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Title:</strong></td>
              <td><%= @resource.show_title %></td>
            </tr>
            <tr>
              <td><strong>Description:</strong></td>
              <td><%= @resource.show_description %></td>
            </tr>
          </tbody>
        </table>
        <!-- <%#= link_to "Write a Review", new_resource_review_path(@resource) %> -->
      </div>
      <div class="col m7 offset-m1">
        <!-- <h1 class="review_title"><%= @resource.show_title %></h1>
        <p><%= @resource.show_description %></p> -->

        <% if @reviews.blank? %>
        <p>No reviews just yet, would you like to add the first?</p>
        <%= link_to "Write Review", new_resource_review_path(@resource), class: "waves-effect waves-light btn" %>
        <% else %>
        <% @reviews.each do |review| %>
        <div class="reviews">
          <div class="star-rating" data-score= <%= review.rating %> ></div>
          <p><%= review.comment %></p>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_resource_path(@resource) %> |
<%= link_to 'Back', resources_path %>

<script>
$('.star-rating').raty({
  path: '/assets/',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
});
</script>
