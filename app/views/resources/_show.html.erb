
<div class="row mod">
  <div class="col s6">
    <div class="card">
      <div class="card-image">
        <%= image_tag resource.show_image, size:"260x200" %>
        <span class="card-title"><%= resource.show_title %></span>
      </div>
    </div>
    <div class="star-rating" data-score= <%= resource.avg_review %> ></div><div style="text-align:left"><em><%= "#{resource.reviews.length} reviews" %></em></div>
    <p><%= resource.show_description %></p>
  </div>
</div>

<div class="row mod">
  <div class="col s6 offset-s6">
    <% if resource.reviews.blank? %>
    <p>No reviews just yet, would you like to add the first?</p>
    <%= link_to "Write Review", new_resource_review_path(resource), class: "waves-effect waves-light btn" %>
    <% else %>
    <% resource.reviews.each do |review| %>
    <div class="reviews">
      <div class="star-rating" data-score= <%= review.rating %> ></div>
      <p><%= review.comment %></p>
    </div>
    <% end %>
    <%= link_to "Write Review", new_resource_review_path(resource), class: "waves-effect waves-light btn" %><br><br>
    <% end %>
    <div class="backk">
      <%= link_to 'Edit', edit_resource_path(resource) %> |
      <%= link_to 'Back', resources_path %> |
      <%= link_to 'Delete', resource, method: :delete %>

    </div>
  </div>
</div>
<script>
$('.star-rating').raty({
  path: '/assets/',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
});
</script>
